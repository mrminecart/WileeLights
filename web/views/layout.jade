doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", rel="stylesheet")
    script(src="//code.jquery.com/jquery-2.1.3.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/Networking.js")
    script(src="/javascripts/main.js")
  body

    .navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') WileeLights
            .navbar-collapse.collapse
                ul.nav.navbar-nav

                    li.active
                        a(href='#') Home

                    if lightShows
                        li.dropdown

                            a.dropdown-toggle(href='#', data-toggle='dropdown')
                                | Shows 
                                span.caret


                            ul.dropdown-menu(role='menu')
                                li
                                    for show in lightShows
                                        a.showSelector(href='#' show-name=show) #{show}

                    if lightGroups
                        li.dropdown

                            a.dropdown-toggle(href='#', data-toggle='dropdown')
                                | Light Group 
                                span.caret

                            ul.dropdown-menu(role='menu')
                                li
                                    for group in lightGroups
                                        a.groupSelector(href='#' group-name=group.name) #{group.name}
                                        

    br
    br
    br

    div.container
        block content